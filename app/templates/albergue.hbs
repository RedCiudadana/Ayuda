<div
  id="banner"
  style="background-image: url(images/banner-home-01.jpg)"
  class="parallax background"
  data-img-width="2000"
  data-img-height="1330"
  data-diff="400"
>
  <div class="container">
    <div class="sixteen columns">
      <div class="search-container">
        <!-- Form -->
        <h2>Albergues</h2>
        <input type="text" class="ico-01" placeholder="Nombre, departamento, prioridad" value=""/>
        <button><i class="fa fa-search"></i></button>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="sixteen columns">
    <div class="padding-right">
      <div class="listings-container">

        {{#each model.albergues as |albergues|}}
          <a href="job-page-alt.html" class="listing full-time">
            {{!-- <div class="listing-logo">
              <img src="images/job-list-logo-01.png" alt="">
            </div> --}}

            <div class="listing-title">
              <h4>
                {{albergues.nombre}}
                {{#if albergues.horario}}
                  <span class="listing-type">{{albergues.horario}}</span>
                {{/if}}
              </h4>

              <ul class="listing-icons">
                <li><i class="ln ln-icon-Management"></i> {{albergues.telefono}}</li>
                <li><i class="ln ln-icon-Map2"></i> {{albergues.direccion}}</li>
              </ul>
            </div>
          </a>
        {{/each}}
      </div>

      <div class="margin-bottom-55"></div>
    </div>
  </div>
</div>
